<% if Measurement.find_by(user_id: current_user.id) == nil %>
	<h1>Please update your measurements before placing an order</h1>
<% else %>
	<% if params[:measurements] == "existing" %>
		<h2>Would you like to update your measurements?</h2>
		<%= form_for(@measurement) do |f| %>
			<%= render 'layouts/measurements', f: f %>
			<%= f.hidden_field :source, value: "order" %>
			<%= f.submit "Submit", class: "btn btn-primary" %>
		<% end %>
	<% else %>
		<%= form_for(@suit, url: orders_path) do |f| %>
			<div id="measurements-step">
				<%= render 'layouts/measurements', f: f %>
				<button class='button' id='measurements-button'>Next</button>
			</div>
			<div id="customize-step">
				<h3>Lapel</h3>
				<table>
					<tr>
						<td><%= f.radio_button :lapel, "notch", class: "radio" %></td>
						<td><%= f.label :notch %></td>
					</tr>
					<tr>
						<td><%= f.radio_button :lapel, "peak" %></td>
						<td><%= f.label :peak %></td>
					</tr>
				</table>
				<h3>Vents</h3>
				<table>
					<tr>
						<td><%= f.radio_button :vents, "single" %></td>
						<td><%= f.label :single %></td>
					</tr>
					<tr>
						<td><%= f.radio_button :vents, "double" %></td>
						<td><%= f.label :double %></td>
					</tr>
				</table>
				<h3>Buttons</h3>
				<table>
					<tr>
						<td><%= f.radio_button :buttons, "one" %></td>
						<td><%= f.label :one %></td>
					</tr>
					<tr>
						<td><%= f.radio_button :buttons, "two" %></td>
						<td><%= f.label :two %></td>
					</tr>
					<tr>
						<td><%= f.radio_button :buttons, "three" %></td>
						<td><%= f.label :three %></td>
					</tr>
				</table>
			</div>
			<%= f.submit "Submit", class: "btn btn-primary" %>
		<% end %>
	<% end %>
<% end %>




